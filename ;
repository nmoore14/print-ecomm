<script>
    import { getContext } from "svelte";

    export let message;
    export let isEmployeeForm = true;
    export let onCancel = () => {};
    export let onSubmit = () => {};

    const { close } = getContext('add-user-modal');

    let value;
    let onChange = () => {};

    function _onCancel() {
        onCancel();
        close();
    }

    function _okSubmit() {
        onSubmit(value);
        close();
    }
    $: onChange(value)

</script>

{#if isEmployeeForm}
    <h2>Add Employee</h2>
    <div class="p-10 card bg-base-200">
        <div class="form-control">
            <label class="label" for="username">
                <span class="label-text">Username</span>
            </label> 
            <input type="text" placeholder="username" class="input" name="username">
        </div>
    </div>
{/if}
